{
  "name": "snappy-i18n",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-vitest": "^0.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mo0hamedRadwan/snappy-i18n.git"
  },
  "description": "A lightweight, TypeScript-based internationalization (i18n) and localization (l10n) library for JavaScript applications. Designed to be framework-agnostic, extensible, and performant, @snappy/i18n provides robust features for managing translations, formatting numbers and dates, handling text direction, and supporting pluralization.",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "typescript"
  ],
  "author": "Mohamed Radwan",
  "license": "ISC",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
